        }
      ]
    },
    {
      "name": "Emergency",
      "short_name": "SOS",
      "description": "Emergency protocols and contacts",
      "url": "/emergency?source=pwa",
      "icons": [
        {
          "src": "/shortcut-emergency.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "receipt",
          "accept": ["image/*"]
        },
        {
          "name": "report",
          "accept": ["application/pdf"]
        }
      ]
    }
  },
  "features": [
    "Cross Platform",
    "Offline Capable",
    "Voice Commands",
    "AI Assistant",
    "Real-time Sync",
    "Push Notifications"
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": ["focus-existing", "auto"]
  },
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "browser"
  ],
  "file_handlers": [
    {
      "action": "/open",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp"],
        "application/pdf": [".pdf"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+fieldforge",
      "url": "/protocol?url=%s"
    }
  ],
  "scope_extensions": [
    {
      "origin": "https://*.supabase.co"
    }
  ]
}