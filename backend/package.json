{
  "name": "fieldforge-backend",
  "version": "0.1.0",
  "description": "FieldForge Construction Platform Backend API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "npm run clean && tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "migrate": "tsx src/scripts/runMigrations.ts",
    "seed": "tsx src/scripts/seedDatabase.ts",
    "verify-auth": "tsx src/scripts/verifyAuth.ts",
    "vercel-build": "npm run build"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.6",
    "@supabase/supabase-js": "^2.45.4",
    "@types/multer": "^2.0.0",
    "ably": "^1.2.42",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "multer": "^2.0.2",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.3",
    "stripe": "^17.5.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/node": "^20.8.10",
    "@types/pg": "^8.10.7",
    "@types/uuid": "^9.0.6",
    "tsx": "^4.20.6",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
